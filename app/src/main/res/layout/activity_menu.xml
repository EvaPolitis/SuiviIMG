<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MenuActivity">


        <Button
            android:id="@+id/btnAccesIMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"

            android:layout_centerHorizontal="true"

            android:text="Mon IMC"
            android:drawableBottom="@drawable/zen" />


        <Button
            android:id="@+id/btnAccesSalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/sport"
            android:text="Salles de sport"

            android:layout_marginTop="20dp"
            android:layout_below="@+id/btnAccesIMG"
            android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btnQuizz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Quizz"
        android:textSize="20sp"
        android:layout_marginTop="20dp"

        android:layout_below="@+id/btnAccesSalles"
        android:layout_centerInParent="true"/>

</RelativeLayout>